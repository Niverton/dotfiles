client.urgent #cc241d #cc241d #fbdbb2 #282828 #282828

# Status Bar:
bar {
    position top
    colors {
        background #282828
        statusline #ebdbb2
	separator #928374
        #                       border  bg      text
        focused_workspace       #83a598 #83a598 #282828
        active_workspace        #7c6f64 #7c6f64 #282828
        inactive_workspace      #282828 #282828 #ebdbb2
        urgent_workspace        #cc241d #cc241d #ebdbb2
    }
    status_command i3blocks
}

